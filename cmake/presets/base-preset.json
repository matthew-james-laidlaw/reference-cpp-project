{
    "version": 8,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CPACK_INCLUDE_TOPLEVEL_DIRECTORY": "OFF",
                "TARGET_NAME": "${presetName}"
            },
            "condition": {
                "type": "notEquals",
                "lhs": "$env{VCPKG_ROOT}",
                "rhs": ""
            }
        }
    ]
}
