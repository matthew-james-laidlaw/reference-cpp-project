{
    "version": 8,
    "configurePresets": [

        {
            "name": "base",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/${presetName}.cmake",
                "CPACK_INCLUDE_TOPLEVEL_DIRECTORY": "OFF"
            }
        },

        { "name": "arm64-linux-clang",   "inherits": [ "base" ] },
        { "name": "arm64-linux-gnu",     "inherits": [ "base" ] },
        { "name": "arm64-macos-clang",   "inherits": [ "base" ] },
        { "name": "arm64-windows-clang", "inherits": [ "base" ] },
        { "name": "arm64-windows-msvc",  "inherits": [ "base" ] },
        { "name": "x64-linux-clang",     "inherits": [ "base" ] },
        { "name": "x64-linux-gnu",       "inherits": [ "base" ] },
        { "name": "x64-macos-clang",     "inherits": [ "base" ] },
        { "name": "x64-windows-clang",   "inherits": [ "base" ] },
        { "name": "x64-windows-msvc",    "inherits": [ "base" ] }

    ]
}
